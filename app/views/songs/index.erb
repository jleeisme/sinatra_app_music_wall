<h1>All Songs</h1>
<hr/>

<% @songs.each do |song| %>
  <div class="songs">
    <h3><%= song.title %> <small>(by: <%= song.author %>)</small></h3>
    <p>
      <%= song.url %>
    </p>
  </div>
<% end %>

<hr/>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-music" aria-hidden="true"></span> 
  <a href="/songs/new">Put Up A New Song!</a>
</button>